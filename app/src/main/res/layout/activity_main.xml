<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Create Room"
                android:textColor="#000000"
                android:textSize="50dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                
                <Button
                    android:id="@+id/createPrivate"
                    android:layout_height="75dp"
                    android:layout_width="150dp"
                    android:text="Create Private Room"/>

                <Button
                    android:id="@+id/createPublic"
                    android:layout_height="75dp"
                    android:layout_width="150dp"
                    android:text="Create Public Room"/>
                
            </LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Join Room"
                android:textColor="#000000"
                android:textSize="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/joinPrivate"
                    android:layout_height="75dp"
                    android:layout_width="150dp"
                    android:text="Join Private Room"/>

                <Button
                    android:id="@+id/joinPublic"
                    android:layout_height="75dp"
                    android:layout_width="150dp"
                    android:text="Join Public Room"/>

            </LinearLayout>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>